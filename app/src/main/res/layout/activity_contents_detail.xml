<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Contents.ContentsDetailActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="카테고리"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/categoryView"/>
            <TextView
                    android:text="제목"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/titleView" android:textSize="36sp"/>
            <TextView
                    android:text="작성자 홍길동"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/writerView"/>
            <TextView
                    android:text="yyyy.mm.dd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/writeTimeView"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/contentsBodyLayout">
                <TextView
                        android:text="내용"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/contentsTextView"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>